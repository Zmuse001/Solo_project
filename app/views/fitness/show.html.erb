<h1><%= @fitness.title %></h1>

<p><%= @fitness.body %></p>

<ul>
  <li><%= link_to "Edit", edit_fitness_path(@fitness) %></li>
  <li><%= link_to "Destroy", fitness_path(@fitness), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<%= render @fitness.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>